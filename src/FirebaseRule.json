{
  "rules": {
    "posts": {
      ".read": "true",
      "$post_id": {
        ".write": "!data.exists() || data.child('uid').val() === auth.uid",
        ".read": "true",
        "title": { ".validate": "data.exists() && data.isString()" },
        "md": { ".validate": "data.exists() && data.isString()" },
        "uid": { ".validate": "data.exists() && data.val() === auth.uid" },
        "category": {
          ".validate": "(!data.exists()) || data.child('category').isString()"
        },
        "$other": { ".validate": false },
        ".validate": "data.child('uid').exists() && data.child('uid').val() === auth.uid"
      }
    }
  }
}
